<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e0000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contributor_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contributor_name"
            android:textColor="#cf001755"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- TODO Add menu button to contact via email -->
        <!-- TODO Click to open profile link -->

    </RelativeLayout>
</android.support.v7.widget.CardView>
