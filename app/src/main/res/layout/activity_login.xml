<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    tools:context="com.karthikb351.vitinfo2.fragment.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        android:layout_centerHorizontal="true"
        android:text="Logo Goes Here "
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textSize="@dimen/abc_text_size_large_material"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Registration number"
        android:textAppearance="@dimen/abc_edit_text_inset_bottom_material"
        android:textColorHint="@color/material_blue_grey_800"
        android:textSize="@dimen/abc_text_size_small_material"
        android:id="@+id/etRegNo"
        android:inputType="textCapCharacters"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth (DDMMYYYY)"
        android:id="@+id/etDob"
        android:focusable="false"
        android:layout_margin="5dp"
        android:inputType="date"
        android:layout_centerHorizontal="true"
        android:textAppearance="@dimen/abc_edit_text_inset_bottom_material"
        android:textColorHint="@color/material_blue_grey_800"
        android:textSize="@dimen/abc_text_size_small_material"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:textAppearance="@dimen/abc_edit_text_inset_bottom_material"
        android:textColorHint="@color/material_blue_grey_800"
        android:textSize="@dimen/abc_text_size_small_material"
        android:id="@+id/etPhone"
        android:layout_margin="5dp"
        android:inputType="phone"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="One Time Password"
        android:textColorHint="@color/material_blue_grey_800"
        android:textAppearance="@dimen/abc_edit_text_inset_bottom_material"
        android:textSize="@dimen/abc_text_size_small_material"
        android:id="@+id/etOTP"
        android:inputType="textNoSuggestions"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textAppearance="@dimen/abc_button_inset_horizontal_material"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_margin="5dp"
        android:id="@+id/bLogin"
        />
</LinearLayout>
