<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/photo_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/photo_friend"
                android:textSize="30sp"
                android:layout_toEndOf="@+id/photo_friend" />

            <TextView
                android:id="@+id/tv_friend_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_friend_name"
                android:layout_toRightOf="@+id/photo_friend"
                android:layout_toEndOf="@+id/photo_friend" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
